#!/usr/bin/env python

import csv
import sys
import os

from lapchart_gui import LapChartGUI

my_version = '0.1'

class chartdata:
    def __init__(self, gui=None):
        self.gui = gui
        self.cars = {}
        self.cells = []
        self.maxpos = 0

    def add(self, car, lap=None, pos=None, lead=None):
        if car not in self.cars:
            self.cars[car] = { 'no' : car, 'laps' : 0 }

        if lap == None:
            lap = self.cars[car]['laps'] + 1
        if lap > len(self.cells):
            self.cells.extend([[] for i in range(lap - len(self.cells))])
        if lap > self.cars[car]['laps']:
            self.cars[car]['laps'] = lap
        if lead == None:
            lead = len(self.cells)
            if lead < lap: lead = lap
        if pos == None:
            pos = len(self.cells[lap-1]) + 1
        if pos > self.maxpos: self.maxpos = pos
        if pos > len(self.cells[lap-1]):
            self.cells[lap-1].extend([None] * (pos - len(self.cells[lap-1])))
        if self.cells[lap-1][pos-1] == None:
            self.cells[lap-1][pos-1] = [None] * 3
            if self.gui: self.cells[lap-1][pos-1][0] = self.gui.getCell(lap,pos)
        self.cells[lap-1][pos-1][1] = car
        self.cells[lap-1][pos-1][2] = lead
        if self.gui:
            self.cells[lap-1][pos-1][0].set(self.cars[car])

    def car(self, car_id, **args):
        if car_id not in self.cars and len(args) == 0:
            return None
        if car_id not in self.cars:
            self.cars[car_id] = { 'no' : '??', 'laps' : 0 }
        for k in args:
            self.cars[car_id][k] = args[k]
        return self.cars[car_id]

    def num_laps(self):
        return len(self.cells)

    def max_pos(self, lap=None):
        if lap == None: return self.maxpos
        if lap > len(self.cells): return None
        return len(self.cells[lap-1])

    def lookup(self, lap, pos):
        if lap > len(self.cells): return None
        if pos > len(self.cells[lap-1]): return None
        cell = self.cells[lap-1][pos-1]
        return (self.cars[cell[1]], cell[2])

def load_passings(data, path):
    with open(path, 'rb') as pfile:
        reader = csv.DictReader(pfile, delimiter='\t', quoting=csv.QUOTE_NONE)
        for row in reader:
            car_no = row['No.']
            if car_no == '' or car_no == '??': continue
            lap = int(row['Laps'].strip('P '))
            if lap <= 0: continue
            lead = int(row['Lead'])
            class_ = row['Class']
            driver = row['Name']
            car_id = class_ + '_' + car_no + '_' + driver
            car = data.car(car_id, no=car_no, class_=class_)
            if lap <= car['laps']: continue
            data.add(car_id, lap=lap, lead=lead)

def save_ps(data, path):
    if hasattr(sys, "frozen"):
        mainprog = sys.executable
    else:
        mainprog = sys.argv[0]
    tpath = os.path.join(os.path.dirname(mainprog), 'template.ps')
    with open(tpath, 'r') as template, open(path, 'w') as output:
        for line in template:
            if line.strip() == '%%Insert-Chart-Here':
                mode = "Plain"
                laps = data.num_laps()
                output.write("%d %d ChartFrame\n" % (laps, data.max_pos()))
                output.write("ChartFont\n")
                for lap in range(1, 1+laps):
                    for pos in range(1, 1+data.max_pos(lap)):
                        (car, lead) = data.lookup(lap, pos)
                        if lead == laps: newmode = "Final"
                        elif lead % 5:   newmode = "Plain"
                        elif lead % 10:  newmode = "Odd"
                        else:            newmode = "Even"
                        if mode != newmode:
                            output.write("ChartMode%s\n" % newmode)
                            mode = newmode
                        output.write("%d %d (%s) ChartCell\n" %
                                (lap, pos, car['no']))
            else:
                output.write(line)

if __name__ == '__main__':
    gui = LapChartGUI()
    gui.master.title('ChartRoom v%s' % my_version)
    data = chartdata(gui)

    if len(sys.argv) > 1:
        load_passings(data, sys.argv[1])
    else:
        data.add('10') # 1, 1
        data.add('2',) # 1, 2
        data.add('08') # 1, 3
        data.add('55') # 1, 4
        data.add('42') # 1, 5
        data.add('10') # 2, 1
        data.add('08') # 2, 2
        data.add('2',) # 2, 3
        data.add('55') # 2, 4
        data.add('08') # 3, 1
        data.add('42') # 2, 5
        data.add('10') # 3, 2
        data.add('2',) # 3, 3
        data.add('55') # 3, 4
        data.add('15', 1,15)
        data.add('1', 14, 1)

    if len(sys.argv) > 2:
        save_ps(data, sys.argv[2])
    else:
        gui.mainloop()
